<?xml version="1.0" encoding="utf-8"?>
<animation-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="false">
    <item
        android:duration="500"
        >
        <rotate  android:rotation="90" android:drawable="@drawable/shime1"/>

    </item>
    <item
        android:duration="500"
        android:drawable="@drawable/shime2">

        <rotate android:scaleY="-1" android:fromDegrees="0" android:toDegrees="180.0"></rotate>

    </item>
    <item
        android:duration="500"
        android:drawable="@drawable/shime3">

        <rotate android:fromDegrees="180.0" android:toDegrees="180.0"></rotate>

    </item>


</animation-list>